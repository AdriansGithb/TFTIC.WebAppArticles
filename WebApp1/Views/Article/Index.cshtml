@model IEnumerable<ArticleModel>

<h2>Liste des articles</h2>
<a asp-action="Create">Ajouter article</a>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(a => a.IdArticle)</th>
        <th>@Html.DisplayNameFor(a => a.Nom)</th>
        <th>@Html.DisplayNameFor(a => a.Prix)</th>
        <th>@Html.DisplayNameFor(a => a.CodeEAN13)</th>
        <th>@Html.DisplayNameFor(a => a.Description)</th>
        <th>@Html.DisplayNameFor(a => a.LibCategorie)</th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    @foreach (WebApp1.Models.ArticleModel am in Model)
    {
        <tr>
            <td>@Html.DisplayFor(a => am.IdArticle)</td>
            <td>@Html.DisplayFor(a => am.Nom)</td>
            <td>@Html.DisplayFor(a => am.Prix)</td>
            <td>@Html.DisplayFor(a => am.CodeEAN13)</td>
            <td>@Html.DisplayFor(a => am.Description)</td>
            <td>@Html.DisplayFor(a => am.LibCategorie)</td>
            <td>@Html.ActionLink("Détails", "Details", new { id = am.IdArticle })</td>
            <td>@Html.ActionLink("Update", "Edit", new { id = am.IdArticle })</td>
            <td>@Html.ActionLink("Delete", "Delete", new { id = am.IdArticle })</td>
        </tr>
    }
</table>
